{
  "ts-node": {
    "transpileOnly": false,
    "files": true,
    "compilerOptions": {
      "resolveJsonModule": true
    }
  },
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "",
    "declaration": true,
    "strict": false,
    "paths": {
      "@utils/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "spec/**/*.ts"],
}
